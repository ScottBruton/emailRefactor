{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ScoBroMail-Refactor",
  "version": "0.9.0",
  "identifier": "com.emailrefactor.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ScoBro Mail - Refactor",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "../assets/Tray_Icon.ico"
    ],
    "resources": [
      "../.env"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      },
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
  "updater": {
    "active": true,
    "endpoints": [
      "https://github.com/ScottBruton/emailRefactor/releases/download/v1.0.0/latest.json"
    ],
    "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlDQ0JEQjU3Nzk2NjI4RTcKUldUbktHWjVWOXZMbkd2U1R3a0pMbVROT25xclpXQUJBR21LNDd0V09NOW1lR1RWQ1dJZHV1M3EK"
  }
}
}
