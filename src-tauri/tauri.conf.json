{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ScoBro Mail - Refactor",
  "version": "0.0.0",
  "identifier": "com.emailrefactor.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ScoBro Mail - Refactor",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "visible": true
      }
    ],
    "security": {
      "csp": {
        "default-src": ["'self'"],
        "img-src": ["'self'", "data:", "asset:", "https://asset.localhost"],
        "style-src": ["'self'", "'unsafe-inline'"],
        "script-src": ["'self'", "'unsafe-eval'"],
        "connect-src": [
          "'self'",
          "https://github.com",
          "https://*.githubusercontent.com",
          "https://api.github.com"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "../assets/Tray_Icon.ico"
    ],
    "resources": [
      "../.env"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      },
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/ScottBruton/emailRefactor/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRFMzY4MzM0QUYzQUM1QjcKUldTM3hUcXZOSU0yVGpVbXpVVEY4V0JJeFpjMnF5ZmVQSDhTbFk3MEUrTW85U0w1cjNCeUo0eGgK"
    }
  }
}
