{
    "$schema":  "https://schema.tauri.app/config/2",
    "productName":  "ScoBro Mail - Refactor",
    "version": "1.0.0",
    "identifier":  "com.emailrefactor.app",
    "build":  {
                  "beforeDevCommand":  "npm run dev",
                  "devUrl":  "http://localhost:1420",
                  "beforeBuildCommand":  "npm run build",
                  "frontendDist":  "../dist"
              },
    "app":  {
                "windows":  [
                                {
                                    "title":  "ScoBro Mail - Refactor",
                                    "width":  1200,
                                    "height":  800,
                                    "minWidth":  800,
                                    "minHeight":  600,
                                    "center":  true,
                                    "resizable":  true,
                                    "fullscreen":  false,
                                    "visible":  true
                                }
                            ],
                "security":  {
                                 "csp":  {
                                             "default-src":  [
                                                                 "\u0027self\u0027"
                                                             ],
                                             "img-src":  [
                                                             "\u0027self\u0027",
                                                             "data:",
                                                             "asset:",
                                                             "https://asset.localhost"
                                                         ],
                                             "style-src":  [
                                                               "\u0027self\u0027",
                                                               "\u0027unsafe-inline\u0027"
                                                           ],
                                             "script-src":  [
                                                                "\u0027self\u0027",
                                                                "\u0027unsafe-eval\u0027"
                                                            ],
                                             "connect-src":  [
                                                                 "\u0027self\u0027",
                                                                 "https://github.com",
                                                                 "https://*.githubusercontent.com",
                                                                 "https://api.github.com"
                                                             ]
                                         }
                             }
            },
    "bundle":  {
                   "active":  true,
                   "targets":  "all",
                   "icon":  [
                                "icons/32x32.png",
                                "icons/128x128.png",
                                "icons/128x128@2x.png",
                                "icons/icon.icns",
                                "../assets/Tray_Icon.ico"
                            ],
                   "resources":  [
                                     "../.env"
                                 ],
                   "windows":  {
                                   "nsis":  {
                                                "installMode":  "currentUser"
                                            },
                                   "webviewInstallMode":  {
                                                              "type":  "downloadBootstrapper",
                                                              "silent":  true
                                                          },
                                   "digestAlgorithm":  "sha256",
                                   "timestampUrl":  ""
                               },
                   "createUpdaterArtifacts":  true
               },
    "plugins":  {
                    "updater":  {
                                    "active":  true,
                                    "endpoints":  [
                                                      "https://github.com/ScottBruton/emailRefactor/releases/latest/download/latest.json"
                                                  ],
                                    "pubkey":  "Deriving a key from the password in order to encrypt the secret key... done"
                                }
                }
}
